/* styles/common.wxss */

/* Color Palette */
page {
  /* 基础色板：更鲜艳、更年轻 */
  --primary-color: #667eea;       /* 蓝紫主色 */
  --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  
  --secondary-color: #fecfef;     /* 柔和粉 */
  --secondary-gradient: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
  
  --success-color: #48bb78;       /* 鲜亮绿 */
  --success-gradient: linear-gradient(135deg, #48bb78 0%, #4299e1 100%);
  
  --danger-color: #f56565;        /* 活力红 */
  --danger-gradient: linear-gradient(135deg, #f56565 0%, #ed64a6 100%);
  
  --warning-color: #ecc94b;       /* 明亮黄 */
  --warning-gradient: linear-gradient(135deg, #ecc94b 0%, #ed8936 100%);

  --bg-color: #F7F8FA;            /* 极简灰背景 */
  --card-bg: #FFFFFF;             /* 卡片白 */
  
  --text-main: #2D3748;           /* 深蓝灰文字 */
  --text-sub: #718096;            /* 浅蓝灰文字 */
  --text-placeholder: #A0AEC0;    /* 占位文字 */
  --border-color: #E2E8F0;        /* 边框色 */
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* Typography */
.text-h1 { font-size: 48rpx; font-weight: 800; color: var(--text-main); }
.text-h2 { font-size: 40rpx; font-weight: bold; color: var(--text-main); }
.text-h3 { font-size: 32rpx; font-weight: bold; color: var(--text-main); }
.text-body { font-size: 28rpx; color: var(--text-main); }
.text-desc { font-size: 24rpx; color: var(--text-sub); }

/* Layout & Spacing */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }
.justify-end { justify-content: flex-end; }
.align-center { align-items: center; }

.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mt-20 { margin-top: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

/* Components */

/* Card */
.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 10rpx 30rpx -10rpx rgba(66, 71, 91, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* Button */
.btn-primary {
  background: var(--primary-gradient);
  color: #fff;
  border-radius: 44rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.4);
  width: 100%;
  transition: all 0.3s ease;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 10rpx rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: #fff;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 44rpx;
  padding: 22rpx 0;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
}

.btn-danger {
    background: var(--danger-gradient);
    color: #fff;
    box-shadow: 0 10rpx 20rpx rgba(245, 101, 101, 0.4);
}

/* Input */
.input-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx; /* 减小内边距，解决文字截断 */
  font-size: 28rpx;
  color: var(--text-main);
  width: 100%;
  height: 80rpx; /* 显式设置高度 */
  line-height: 40rpx; /* 设置行高 */
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: border-color 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.input-box.textarea {
    height: 160rpx; /* 文本域高度 */
    line-height: 1.5;
}

.input-box:focus {
    border-color: var(--primary-color);
}

/* Tag */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.tag-primary { background: linear-gradient(135deg, #e3f2fd 0%, #f1f8ff 100%); color: #4299e1; }
.tag-success { background: linear-gradient(135deg, #f0fff4 0%, #e6fffa 100%); color: #38a169; }
.tag-danger { background: linear-gradient(135deg, #fff5f5 0%, #fff0f0 100%); color: #e53e3e; }
.tag-warning { background: linear-gradient(135deg, #fffff0 0%, #fffaf0 100%); color: #d69e2e; }

/* Avatar */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.avatar-sm {
    width: 48rpx;
    height: 48rpx;
}
